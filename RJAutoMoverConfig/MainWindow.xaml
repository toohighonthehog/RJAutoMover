<Window x:Class="RJAutoMoverConfig.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RJAutoMoverConfig"
        xmlns:converters="clr-namespace:RJAutoMoverConfig.Converters"
        mc:Ignorable="d"
        Title="RJAutoMover Configuration Editor"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:ExtensionSplitterConverter x:Key="ExtensionSplitterConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="AppIcon" Grid.Column="0" Width="48" Height="48"
                       Margin="0,0,15,0" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="RJAutoMover Configuration Editor" FontSize="20" FontWeight="Bold"
                               Foreground="White" Margin="0,0,0,3"/>
                    <TextBlock Text="Edit and validate configuration files for RJAutoMover service" FontSize="11"
                               Foreground="#E0E0E0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- File Path Bar -->
        <Border Grid.Row="1" Background="White" Padding="15,10" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Config File:" Style="{StaticResource LabelStyle}"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="ConfigPathTextBox" Grid.Column="1" Style="{StaticResource TextBoxStyle}"
                         Text="{Binding ConfigFilePath, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="True" Background="#F9F9F9" Margin="0,0,10,0"/>
                <Button x:Name="BrowseButton" Grid.Column="2" Content="Browse..." Style="{StaticResource ButtonStyle}"
                        Click="BrowseButton_Click" Margin="0,0,10,0"/>
                <Button x:Name="LoadButton" Grid.Column="3" Content="Load" Style="{StaticResource ButtonStyle}"
                        Click="LoadButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <TabControl x:Name="MainTabControl" Grid.Row="2" Margin="15,10" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" SelectedIndex="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#DDDDDD"
                                        CornerRadius="4,4,0,0" Margin="2,0" Padding="20,10">
                                    <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="#357ABD"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <!-- File Rules Tab -->
            <TabItem Header="File Rules">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Rules List -->
                    <DataGrid x:Name="FileRulesDataGrid" Grid.Row="0"
                              ItemsSource="{Binding FileRules}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F9F9F9"
                              RowHeight="38"
                              Margin="0,0,0,15"
                              BorderBrush="#DDDDDD"
                              BorderThickness="1"
                              Background="White"
                              MouseDoubleClick="FileRulesDataGrid_MouseDoubleClick">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <ToolTip>
                                            <StackPanel MaxWidth="500">
                                                <TextBlock FontWeight="Bold" FontSize="12" Margin="0,0,0,5">
                                                    <Run Text="{Binding Name, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="Source: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding SourceFolder, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="Destination: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding DestinationFolder, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="Extensions: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding Extension, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="Scan Interval: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding ScanIntervalMs, Mode=OneWay}"/>
                                                    <Run Text=" ms"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="If File Exists: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding FileExistsAction, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2" Visibility="{Binding HasDateFilter, Converter={StaticResource BoolToVis}}">
                                                    <Run Text="Date Filter: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding DateFilterDescription, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Margin="0,2">
                                                    <Run Text="Active: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding IsActive, Mode=OneWay}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </ToolTip>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <!-- Compact two-line rule display -->
                            <DataGridTemplateColumn Header="Rule" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Margin="4,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Line 1: Active checkbox, Name, Extensions -->
                                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,2,0,0">
                                                <CheckBox IsChecked="{Binding IsActive, UpdateSourceTrigger=PropertyChanged}"
                                                          VerticalAlignment="Center" Margin="0,0,6,0" ToolTip="Active"/>
                                                <TextBlock Text="{Binding Name}" FontSize="10.5" Margin="0,0,8,0" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#333"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <!-- Display extensions as separate colored tiles -->
                                                <ItemsControl ItemsSource="{Binding Extension, Converter={StaticResource ExtensionSplitterConverter}}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{Binding Color}" CornerRadius="2" Padding="4,1" Margin="0,0,3,0">
                                                                <TextBlock Text="{Binding Extension}" FontSize="9" Foreground="White" FontWeight="Medium"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Line 2: Source â†’ Destination -->
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="16,1,0,2">
                                                <TextBlock Text="{Binding SourceFolder}" FontSize="9" FontWeight="Normal" FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="500">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Foreground" Value="#E3F2FD"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text=" â†’ " FontSize="9" Margin="3,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#999"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Foreground" Value="#BBD6F0"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding DestinationFolder}" FontSize="9" FontWeight="Normal" FontStyle="Italic" TextTrimming="CharacterEllipsis" MaxWidth="500">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                                    <Setter Property="Foreground" Value="#E3F2FD"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Copy" Padding="6,3" Margin="1" Width="40"
                                                    Click="DuplicateRuleButton_Click" Tag="{Binding}"
                                                    Background="#66BB6A" Foreground="White" BorderThickness="0"
                                                    Cursor="Hand" FontSize="10" FontWeight="SemiBold" ToolTip="Duplicate Rule">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="Del" Padding="6,3" Margin="1" Width="40"
                                                    Click="DeleteRuleButton_Click" Tag="{Binding}"
                                                    Background="#D32F2F" Foreground="White" BorderThickness="0"
                                                    Cursor="Hand" FontSize="10" FontWeight="SemiBold" ToolTip="Delete Rule">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#B71C1C"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="AddRuleButton" Content="âž• Add New Rule" Style="{StaticResource ButtonStyle}"
                                    Click="AddRuleButton_Click" Padding="20,10" FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FileRules.Count, StringFormat='Total Rules: {0}'}"
                                       VerticalAlignment="Center" Margin="20,0,0,0" FontSize="13" Foreground="#666" FontWeight="Medium"/>
                        </StackPanel>
                        <Border Background="#E8F5E9" BorderBrush="#C8E6C9" BorderThickness="1" CornerRadius="4" Padding="10,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#2E7D32">
                                    <Run FontWeight="SemiBold">Tip:</Run>
                                    <Run>Double-click a rule to edit it. Each rule runs independently. Validation prevents overlapping extensions in the same folder.</Run>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Application Settings Tab -->
            <TabItem Header="Application Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <!-- Processing Control -->
                        <Border BorderBrush="#E3F2FD" BorderThickness="2" CornerRadius="4" Padding="15" Background="#F8FBFF" Margin="0,0,0,20">
                            <StackPanel>
                                <CheckBox Content="Start with Processing Paused"
                                          IsChecked="{Binding ApplicationSettings.ProcessingPaused}"
                                          Margin="0,5" FontSize="12" FontWeight="Medium"
                                          ToolTip="When enabled, the service starts in paused mode and must be manually resumed via the tray icon."/>
                                <CheckBox Content="Require Tray Approval Before Moving Files"
                                          IsChecked="{Binding ApplicationSettings.RequireTrayApproval}"
                                          Margin="0,10,0,5" FontSize="12" FontWeight="Medium"
                                          ToolTip="Legacy mode: Service waits for tray icon approval before each file move. Default: false for autonomous operation."/>
                            </StackPanel>
                        </Border>

                        <!-- Timing Settings -->
                        <Border BorderBrush="#FFF3E0" BorderThickness="2" CornerRadius="4" Padding="15" Background="#FFFDF7" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Retry Delay (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.RetryDelayMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Wait time before retrying a failed file operation (e.g., file locked). Prevents rapid retry loops."/>
                                    <TextBlock Text="(1000-30000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Failure Cooldown (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.FailureCooldownMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Pause duration after repeated failures to prevent resource exhaustion. Set to 0 to disable."/>
                                    <TextBlock Text="(0-180000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Service Recheck Interval (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.RecheckServiceMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="How often the tray icon checks for the service when disconnected. Lower values reconnect faster but use more CPU."/>
                                    <TextBlock Text="(5000-60000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tray Recheck Interval (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.RecheckTrayMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="How often the service checks for the tray icon when disconnected. Lower values reconnect faster but use more CPU."/>
                                    <TextBlock Text="(5000-60000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Pause Delay (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.PauseDelayMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Wait time when processing is paused before checking again. Lower values resume faster. Set to 0 for instant checking."/>
                                    <TextBlock Text="(0-60000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Service Heartbeat (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.ServiceHeartbeatMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="How often the service sends status updates to the tray icon. Lower values update tray faster but use more network resources."/>
                                    <TextBlock Text="(60000-3600000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Memory Settings -->
                        <Border BorderBrush="#E8EAF6" BorderThickness="2" CornerRadius="4" Padding="15" Background="#F5F6FA" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Memory Limit (MB):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.MemoryLimitMb, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Maximum memory the service can use before triggering garbage collection. Service auto-restarts if this limit is exceeded."/>
                                    <TextBlock Text="(128-4096)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Memory Check Interval (ms):" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.MemoryCheckMs, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="How often the service checks its memory usage. Lower values detect memory issues faster but use slightly more resources."/>
                                    <TextBlock Text="(30000-300000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Network Ports -->
                        <Border BorderBrush="#E1F5FE" BorderThickness="2" CornerRadius="4" Padding="15" Background="#F0F9FF" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Service gRPC Port:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.ServiceGrpcPort, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Port for tray-to-service communication over localhost. Ensure this port is not used by other applications."/>
                                    <TextBlock Text="(1024-65535)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Tray gRPC Port:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.TrayGrpcPort, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Port for service-to-tray communication over localhost. Must be different from Service gRPC Port."/>
                                    <TextBlock Text="(1024-65535)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Activity History -->
                        <Border BorderBrush="#F3E5F5" BorderThickness="2" CornerRadius="4" Padding="15" Background="#FBF8FC" Margin="0,0,0,20">
                            <StackPanel>
                                <CheckBox Content="Enable Activity History"
                                          IsChecked="{Binding ApplicationSettings.ActivityHistoryEnabled}"
                                          Margin="0,5" FontSize="12" FontWeight="Medium"
                                          ToolTip="Track all file transfers in a persistent SQLite database. Provides cross-session transfer history and accountability."/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Max Records:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                        <TextBox Width="120" Text="{Binding ApplicationSettings.ActivityHistoryMaxRecords, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8,4" FontSize="12"
                                                 ToolTip="Maximum number of transfer records to keep in the database. Oldest records are automatically removed when this limit is reached."/>
                                        <TextBlock Text="(100-50000)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Retention Days:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                        <TextBox Width="120" Text="{Binding ApplicationSettings.ActivityHistoryRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="8,4" FontSize="12"
                                                 ToolTip="Number of days to keep transfer records. Records older than this are automatically purged at service startup."/>
                                        <TextBlock Text="(1-365)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Logging -->
                        <Border BorderBrush="#FFF9C4" BorderThickness="2" CornerRadius="4" Padding="15" Background="#FFFEF5" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Log Folder:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="400" Text="{Binding ApplicationSettings.LogFolder, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Custom folder path for storing log files. Leave empty to use the default location (C:\ProgramData\RJAutoMover\Logs)."/>
                                    <TextBlock Text="(Leave empty for default)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Log Retention Days:" Style="{StaticResource LabelStyle}" Margin="0,5"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                                    <TextBox Width="120" Text="{Binding ApplicationSettings.LogRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="8,4" FontSize="12"
                                             ToolTip="Number of days to keep log files. Older log files are automatically deleted at service startup to save disk space."/>
                                    <TextBlock Text="(1-365)" Margin="10,0" VerticalAlignment="Center" Foreground="#999" FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Validation Tab -->
            <TabItem x:Name="ValidationTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="ValidationTabIndicator" Width="8" Height="8"
                                 Fill="#999999" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Validation" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="0">
                        <StackPanel>
                            <!-- Validation Status -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="6" Padding="20" Background="White">
                                <StackPanel>
                                    <TextBlock Text="Status:" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,12" Foreground="#444"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="ValidationStatusIndicator" Width="14" Height="14"
                                                 Fill="#999999" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="ValidationStatusText" Text="Not validated"
                                                   FontSize="13" VerticalAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Validation Messages -->
                            <TextBlock x:Name="ValidationMessagesHeader" Text="Validation Messages:"
                                       FontWeight="SemiBold" FontSize="13" Margin="0,20,0,10" Foreground="#444"
                                       Visibility="Collapsed"/>
                            <Border x:Name="ValidationMessagesContainer"
                                    BorderBrush="#DDDDDD" BorderThickness="2" CornerRadius="6"
                                    Padding="18" Background="#FAFAFA" Visibility="Collapsed">
                                <TextBlock x:Name="ValidationMessagesText"
                                           TextWrapping="Wrap" FontFamily="Consolas" FontSize="11" LineHeight="18"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <Button Grid.Row="1" Content="ðŸ” Validate Configuration" Style="{StaticResource ButtonStyle}"
                            Click="ValidateButton_Click" Padding="25,10" HorizontalAlignment="Left" FontSize="13" FontWeight="SemiBold"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="3" Background="White" Padding="15" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Admin Warning -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                            Visibility="{Binding IsAdministrator, Converter={StaticResource InverseBoolToVis}}">
                    <TextBlock Text="âš " FontSize="16" Foreground="#FF9800" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Not running as Administrator. Some actions may be restricted."
                               FontSize="11" Foreground="#FF9800" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SaveButton" Content="Save Configuration" Style="{StaticResource ButtonStyle}"
                            Click="SaveButton_Click" Padding="20,8"
                            IsEnabled="{Binding CanSave}"/>
                    <Button x:Name="SaveAsButton" Content="Save As..." Style="{StaticResource ButtonStyle}"
                            Click="SaveAsButton_Click" Padding="20,8"/>
                    <Button Content="Exit" Style="{StaticResource ButtonStyle}"
                            Click="ExitButton_Click" Padding="20,8" Background="#999999"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
